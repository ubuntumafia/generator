<!DOCTYPE html>
<html>
<head>
  <title>Генератор позывных</title>
  <script>
    function generatePhrase() {
      // Массив с прилагательными
      var adjectives = ["Крутой", "Опасный", "Умный", "Неумолимый", "Великолепный", "Быстрый", "Меткий", "Мощный", "Элегантный", "Смелый", "Опытный", "Решительный", "Бесстрашный", "Профессиональный", "Храбрый", "Неустрашимый", "Скрытный", "Неуязвимый", "Жестокий", "Мужественный", "Бдительный", "Молчаливый", "Непокорный", "Неукротимый", "Живучий", "Везучий", "Лютый", "Ужасный", "Хладнокровный", "Беспощадный", "Хитрый", "Непоколебимый", "Авантюрный", "Бунтовской", "Ведомый", "Фанатичный"];

      // Массив с существительными
      var nouns = ["Адам", "Эндрю", "Эшли", "Остин", "Бенджамин", "Кевин", "Брайан", "Карл", "Чарльз", "Кристиан", "Клинтон", "Даниэль", "Дерек", "Дональд", "Дуглас", "Дуайт", "Эрл", "Эдгар", "Эрик", "Итан", "Феликс", "Франклин", "Джефф", "Грег", "Гарри", "Генри", "Джек", "Джеймс", "Джон", "Кеннет", "Лоренс", "Марк", "Майкл", "Мэтью", "Ник", "Норманн", "Скотт", "Саймон", "Стив", "Томас", "Трэвис", "Тайлер", "Уэйн", "Дриззи", "Картер", "Саймир", "Боб", "Зак"];

      // Генерация случайных индексов прилагательного и существительного
      var adjectiveIndex = Math.floor(Math.random() * adjectives.length);
      var nounIndex = Math.floor(Math.random() * nouns.length);

      // Получение случайного прилагательного и существительного
      var adjective = adjectives[adjectiveIndex];
      var noun = nouns[nounIndex];

      // Вывод сгенерированного словосочетания на страницу
      document.getElementById("phrase").innerHTML = adjective + " " + noun;
    }
  </script>
</head>
<body>
  <h1 style="position: relative;text-align: center;">Генератор позывных</h1>
  <button onclick="generatePhrase()" style="display: block; margin: 0 auto;">Сгенерировать</button>
  <p style="position: relative;text-align: center;" id="phrase"></p>
</body>
</html>
